<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">#FF5722</item>
        <item name="android:colorPrimaryDark">#BF360C</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextTheme">
        <item name="android:padding">4dp</item>
    </style>

    <style name="BlackDarkTextTheme" parent="TextTheme">
        <item name="android:textColor">#000000</item>

    </style>

    <style name="BlackLightTextTheme" parent="TextTheme">
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="WhiteTextTheme" parent="TextTheme">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>