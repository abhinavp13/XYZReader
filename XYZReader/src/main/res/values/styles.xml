<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#BF360C</item>
        <item name="android:colorAccent"  tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="extendStatusBarTheme" parent="Theme.Bacon" />
    <style name="TextTitleTheme" parent = "TextAppearance.AppCompat.Body1">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TextSubTitleTheme" parent="TextTitleTheme">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextTheme">
        <item name="android:padding">4dp</item>
    </style>

    <style name="BlackDarkTextTheme" parent="TextTheme">
        <item name="android:textColor">#000000</item>

    </style>

    <style name="BlackLightTextTheme" parent="TextTheme">
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="WhiteTextTheme" parent="TextTheme">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="toolbarTextTheme" parent="TextTitleTheme">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>